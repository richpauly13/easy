    "@angular/core": "^12.1.0-next.1",
    "@angular/forms": "^12.1.0-next.1",
    "@angular/platform-browser": "^12.1.0-next.1",
    "@angular/platform-browser-dynamic": "^12.1.0-next.1",
    "@angular/router": "^12.1.0-next.1",
    "rxjs": "^6.6.7",
    "tslib": "^2.2.0",
    "zone.js": "~0.11.4"
  },
  "description": "Documentation for EASY framework.",
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.0.0-rc.2",
    "@angular-eslint/builder": "^4.2.0",
    "@angular-eslint/eslint-plugin": "^4.2.0",
    "@angular-eslint/eslint-plugin-template": "^4.2.0",
    "@angular-eslint/schematics": "^4.2.0",
    "@angular-eslint/template-parser": "^4.2.0",
    "@angular/cli": "^12.0.0-rc.2",
    "@angular/compiler-cli": "^12.1.0-next.1",
    "@types/jasmine": "^3.7.0",
    "@types/node": "^15.0.2",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "codecov": "^4.0.0-0",
    "copyfiles": "^2.4.1",
    "eslint": "^7.25.0",
    "eslint-plugin-jsdoc": "^33.1.0",
    "eslint-plugin-unicorn": "^31.0.0",
    "husky": "^6.0.0",
    "jasmine-core": "^3.7.1",
    "jasmine-spec-reporter": "^7.0.0",
    "karma": "^6.3.2",
    "karma-coverage": "^2.0.3",
    "karma-firefox-launcher": "^2.1.0",
    "karma-jasmine": "^4.0.1",
    "karma-jasmine-html-reporter": "^1.5.4",
    "karma-spec-reporter": "^0.0.32",
    "ng-packagr": "^12.0.0-rc.2",
    "npm-run-all": "^4.1.5",
    "pinst": "^2.1.6",
    "protractor": "^7.0.0",
    "standard-version": "^9.3.0",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "homepage": "https://github.com/richpauly13/easy#readme",
  "keywords": [
    "a11y",
    "accessible",
    "angular",
    "css",
    "flexbox",
    "framework",
    "grid",
    "responsive",
    "sass"
  ],
  "license": "MIT",
  "name": "easy",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/richpauly13/easy.git"
  },
  "scripts": {
    "build": "run-s build:easy build:docs",
    "build:docs": "ng build easy-docs --configuration production --base-href ./",
    "build:easy": "ng build easy-framework --configuration production",
    "bump:deps": "npm run build && git add . && git commit -m \"chore(deps): bump deps\" && git push",
    "copy:md": "copyfiles {LICENSE.md,README.md} ./dist/easy-framework",
    "e2e": "npm run update:webdriver && ng e2e",
    "lint": "ng lint --fix",
    "ng": "ng",
    "package": "run-s build:easy copy:md",
    "postinstall": "husky install",
    "postpublish": "pinst --enable",
    "prepublishOnly": "pinst --disable",
    "release": "npm run version && git push --follow-tags origin master && npm run package && npm publish ./dist/easy-framework --access public",
    "start": "ng serve -o",
    "test": "ng test",
    "test:docs": "ng test easy-docs",
    "test:easy": "ng test easy-framework",
    "test:watch": "ng test --watch",
    "update:cli": "ng update @angular/cli --allow-dirty --next --force",
    "update:core": "ng update @angular/core --allow-dirty --next --force",
    "update:deps": "npm update && npm i",
    "update:global": "npm i -g @angular/cli@next",
    "update:ng": "run-s update:global update:cli update:core update:deps",
    "update:webdriver": "webdriver-manager update",
    "version": "cd projects/easy-framework && standard-version",
    "watch:easy": "ng build easy-framework --watch"
  },
  "version": "1.0.0",
  "workspaces": [
    "projects/*"
  ]
}
