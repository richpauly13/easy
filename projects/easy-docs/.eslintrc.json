{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "projects/easy-docs/tsconfig.*?.json"
        ],
        "createDefaultProgram": true
      },
      "plugins": [
        "eslint-plugin-unicorn",
        "eslint-plugin-no-null"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "docs",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "docs",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "@angular-eslint/pipe-prefix": [
          "error",
          {
            "prefixes": [
              "docs"
            ]
          }
        ],
        "class-methods-use-this": [
          "error",
          {
            "exceptMethods": [
              "getTitleText",
              "navigateTo"
            ]
          }
        ],
       "max-len": [
          "error",
          {
            "code": 300
          }
        ],
        "max-lines": [
          "error",
          300
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "rules": {
        "max-len": [
          "error",
          {
            "code": 1100
          }
        ]
      }
    }
  ]
}
