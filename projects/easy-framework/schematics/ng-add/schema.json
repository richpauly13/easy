{
  "$id": "easy-ng-add",
  "$schema": "http://json-schema.org/draft-07/schema",
  "properties": {
    "components": {
      "default": [
        "All"
      ],
      "description": "Specifies the component module(s) to add.",
      "items": {
        "enum": [
          "Com",
          "AlertModule",
          "BadgeModule",
          "ButtonModule",
          "CardModule",
          "FormModule",
          "ProgressModule",
          "SliderModule",
          "SpinnerModule",
          "SwitchModule",
          "TabModule",
          "TableModule"
        ],
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true,
      "x-prompt": "Which component module(s) would you like to add?"
    },
    "layouts": {
      "default": [
        "All"
      ],
      "description": "Specifies the layout module(s) to add.",
      "items": {
        "enum": [
          "All",
          "Flexbox",
          "Grid",
          "Nav"
        ],
        "type": "string"
      },
      "minItems": 1,
      "type": "array",
      "uniqueItems": true,
      "x-prompt": "Which layout module(s) would you like to add?"
    },
    "project": {
      "$default": {
        "$source": "projectName"
      },
      "description": "The name of the project.",
      "type": "string"
    }
  },
  "title": "Easy ng-add schematic",
  "type": "object"
}
