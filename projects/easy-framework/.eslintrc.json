{
  "extends": "../../.eslintrc.json",
  "ignorePatterns": [
    "!**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "projects/easy-framework/tsconfig.*?.json"
        ],
        "createDefaultProgram": true
      },
      "plugins": [
        "eslint-plugin-unicorn",
        "eslint-plugin-no-null"
      ],
      "rules": {
        "@angular-eslint/component-selector": [
          "error",
          {
            "prefix": "ez",
            "style": "kebab-case",
            "type": "element"
          }
        ],
        "@angular-eslint/directive-selector": [
          "error",
          {
            "prefix": "ez",
            "style": "camelCase",
            "type": "attribute"
          }
        ],
        "@angular-eslint/pipe-prefix": [
          "error",
          {
            "prefixes": [
              "ez"
            ]
          }
        ],
        "@angular-eslint/use-component-view-encapsulation": [
          "off"
        ],
        "max-lines": [
          "error",
          300
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "rules": {

      }
    }
  ]
}
