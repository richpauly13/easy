{
  "angularCompilerOptions": {
    "enableResourceInlining": true,
    "skipTemplateCodegen": true,
    "strictMetadataEmit": true
  },
	"compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "inlineSources": true,
    "lib": [
      "dom",
      "es2018"
    ],
    "outDir": "../../out-tsc/lib",
    "target": "es2015"
  },
	"exclude": [
    "src/test.ts",
    "**/*.spec.ts",
  ],
  "extends": "../../tsconfig.json"
}
